<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.lshapp.shortvideodemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:label,android:icon,android:allowBackup,android:supportsRtl,android:theme">

    >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".YWRecordVideoActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".EditVideoActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".WidthMatchVideo"
            android:screenOrientation="portrait"></activity>

    </application>

</manifest>
