<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.qinengapp.activity.MainActivity"
    android:orientation="vertical">

    <com.example.administrator.qinengapp.view.ContentViewPager
        android:id="@+id/vp_centent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_buttom_table"
        android:orientation="horizontal"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/home"
            android:text="首页"
            android:drawableTop="@drawable/buttom_home"
            style="@style/BottomStyle"/>

        <RadioButton
            android:id="@+id/transaction"
            android:text="能源交易"
            android:drawableTop="@drawable/buttom_home"
            style="@style/BottomStyle"/>

        <RadioButton
            android:id="@+id/information"
            android:text="能源资讯"
            android:drawableTop="@drawable/buttom_home"
            style="@style/BottomStyle"/>

        <RadioButton
            android:id="@+id/main"
            android:text="我的"
            android:drawableTop="@drawable/buttom_home"
            style="@style/BottomStyle"/>

    </RadioGroup>

</LinearLayout>
